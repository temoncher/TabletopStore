@model RegisterViewModel

<div class="row">
    <h3 class="center-align">Register</h3>

    <form asp-controller="Account" asp-action="Register" method="post" role="form">

        <input type="hidden" asp-for="ReturnUrl" />

        <div class="row">
            <div class="input-field col s4 offset-s4">
                <i class="material-icons prefix">account_circle</i>
                <input asp-for="UserName" id="UserName_prefix" type="text" class="validate">
                <label for="UserName_prefix">User name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s4 offset-s4">
                <i class="material-icons prefix">mail</i>
                <input asp-for="Email" id="UserName_prefix" type="text" class="validate">
                <label for="UserName_prefix">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s4 offset-s4">
                <i class="material-icons prefix">lock_open</i>
                <input asp-for="Password" id="Password_prefix" class="form-control" />
                <label for="Password_prefix">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s4 offset-s4">
                <i class="material-icons prefix">lock</i>
                <input asp-for="PasswordConfirm" id="Password_prefix" class="form-control" />
                <label for="Password_prefix">Password</label>
            </div>
        </div>

        <div class="row">
            <div class="col s4 offset-s4 my_center">
                <button type="submit" class="waves-effect waves-light btn green margin_1 right">Register</button>
            </div>
        </div>

    </form>
</div>