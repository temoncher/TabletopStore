@model LogInViewModel

<div class="row">
    <h3 class="center-align">Login</h3>

    <form asp-controller="Account" asp-action="Login" method="post" role="form" id="loginForm">

        <input type="hidden" asp-for="ReturnUrl" />

        <div class="row">
            <div class="input-field col s4 offset-s4">
                <i class="material-icons prefix">account_circle</i>
                <input asp-for="UserName" id="UserName_prefix" type="text" class="validate">
                <label for="UserName_prefix">User name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s4 offset-s4">
                <i class="material-icons prefix">lock</i>
                <input asp-for="Password" id="Password_prefix" class="form-control" />
                <label for="Password_prefix">Password</label>
            </div>
        </div>

        <div class="col s4 offset-s4 my_center">
            <div class="red-text" asp-validation-summary="ModelOnly"></div>
        </div>

        <div class="row">
            <div class="col s4 offset-s4 my_center">
                <button type="submit" class="waves-effect waves-light btn blue margin_1 right">Login</button>
            </div>
        </div>

    </form>
</div>