@model TabletopStore.Models.Games.Game

<div class="row">

    <div class="col s12 m8 l8">
        <div class="card">
            <div class="card-image">
                <img src="@Model.ImageUrl" alt="Alternate Text" style="padding: 4%" />
                @if (Model.IsHit)
                {
                    <a href="#" class="halfway-fab btn-floating btn-large pink pulse">

                        <i class="meterial-icons">hit</i>
                    </a>
                }
            </div>
            <div class="card-content">
                <h4>@Model.Name</h4>
                <div class="row">
                    <div class="col">
                        <i class="material-icons left">group</i>
                        <span>@Model.MinPlayers-@Model.MaxPlayers</span>
                    </div>
                    <div class="col">
                        <i class="material-icons left">child_friendly</i>
                        <span>@Model.PrefferedAge</span>
                    </div>
                    <div class="col">
                        <i class="material-icons left">access_time</i>
                        <span>@Model.Time</span>
                    </div>
                </div>
            </div>
            <div class="card-action beautify">
                <p>@Model.LongDescription</p>
            </div>
        </div>
    </div>

    <div class="col s12 m4 l4">
        <div class="card">
            <div class="card-content">
                <span class="card-title">@Model.Name</span>
                <p class="truncate">@Model.ShortDescription</p>
            </div>
            <div class="card-action beautify">
                <a class="waves-effect waves-light btn blue lighten-1 right"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-id="@Model.GameId">@Model.Price.ToString("c")</a>
            </div>
        </div>
    </div>

</div>