@model ChangePasswordViewModel


<div class="row">

    <h2 class="center-align">Change password for @Model.Email</h2>

    <form asp-action="ChangePassword" asp-controller="Profile">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row">
            <div class="input-field col s4 offset-s4">
                <label asp-for="OldPassword" class="control-label">Current password</label>
                <input type="text" asp-for="OldPassword" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="input-field col s4 offset-s4">
                <label asp-for="NewPassword" class="control-label">New password</label>
                <input type="text" asp-for="NewPassword" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col s4 offset-s4 my_center">
                <button type="submit" class="waves-effect waves-light btn blue ligthen-1">Change</button>
            </div>
        </div>
    </form>
</div>
