<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--Import Google Icon Font https://material.io/tools/icons/?style=baseline -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>OnlineStore</title>
    <style>
        .margin_1{
            margin: 1%;
        }
        .beautify
        {
            display: flex;
            align-items: center;
            justify-content: space-between
        }
        .my_center
        {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <!--NavMenu-->
    <nav class="nav-wrapper blue lighten-1">
        <div class="container">
            <a asp-controller="Home" asp-action="Index" class="brand-logo center">Site logo</a>
            <a href="#" class="sidenav-trigger" data-target="mobile-links">
                <i class="material-icons">menu</i>
            </a>
            <ul class="hide-on-med-and-down">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <!-- Dropdown Trigger -->
                <li>
                    <a asp-controller="Games" asp-action="List" class='dropdown-trigger' data-target='dropdown1'>Games</a>
                    @await Component.InvokeAsync("CategoryMenu")
                </li>

                <li><a asp-controller="Contact" asp-action="Index">Contact us</a></li>
                @await Component.InvokeAsync("ShoppingCartSummary")
                @await Html.PartialAsync("LoginPartial")
            </ul>
            <ul class="sidenav" id="mobile-links">
                <li class="bold"><a asp-controller="Home" asp-action="Index" class='waves-effect waves-teal'>Home</a></li>
                <!-- Dropdown Trigger -->
                <li class="bold" >
                    <ul class="collapsible collapsible-accordion">
                        <li >
                            <a class='collapsible-header waves-effect waves-teal' href="#" tabindex="0" style="padding: 0px 32px">Games</a>

                            <div class="collapsible-body" style="display: block; padding: 0px 16px">
                                @await Component.InvokeAsync("MobileCategoryMenu")
                            </div>
                        </li>
                    </ul>
                </li>
                <li class="bold"><a asp-controller="Contact" asp-action="Index" class='waves-effect waves-teal'>Contact us</a></li>
            </ul>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>
    <hr />
    <footer>
        <div class="container">
            <p><a href="https://github.com/temoncher/">&copy; 2019 - Temoncher/TabletopStore</a></p>
        </div>
    </footer>

    <!--JQuery-->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!--Scripts-->
    <script>
        $(document).ready(function () {
            $('.sidenav').sidenav()
        })
    </script>
    <script>
        $(document).ready(function () {
            $('.carousel').carousel();
        });
        $('.carousel.carousel-slider').carousel({
            fullWidth: true
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.collapsible').collapsible();
        });
    </script>
    <script>
        $('.dropdown-trigger').dropdown(
            {
                hover: true,
                coverTrigger: false
            });
    </script>
</body>
</html>
